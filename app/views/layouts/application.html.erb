<!DOCTYPE html>
<html>
<head>
  <title>Iris | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
		<%= link_to 'Index', '/', class: "nav-link" %>
		<%= link_to 'Blogs', blogs_path(@blogs), class: "nav-link" %>
		<%= link_to 'Users', users_path(@users), class: "nav-link" %>
	</nav>	
	<header>
		<h1>Iris</h1>
		<section id="session">
			<% if logged_in? %>
				<span>Welcome, <%= link_to current_user.name, current_user, class: "session-link" %> | <%= link_to 'Logout', logout_path, method: :delete, class: "session-link" %></span>
			<% else %>
				<%= link_to "Login", login_path, class: "session-link" %> | 
				<%= link_to 'Register', new_user_path, class: "session-link" %>
			<% end %>
		</section>
	</header>
	<h2 id="content-title"><%= yield(:title) %></h2>
	<%= yield %>
</body>
</html>
