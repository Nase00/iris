<!DOCTYPE html>
<html>
<head>
  <title>Iris | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<h1>Iris | <%= yield(:title) %></h1>
		<% if logged_in? %>
			<span>Welcome, <%= link_to current_user.name %> <%= link_to current_user.email %> <%= link_to 'Logout', logout_path, method: :delete %></span>
			<p><%= link_to "Profile", current_user %></p>
		<% else %>
			<%= link_to "Login", login_path %> <%= link_to 'Register', new_user_path %>
		<% end %>
		<nav>
			<%= link_to 'Index', '/' %> <%= link_to 'Blogs', blogs_path(@blogs) %> <%= link_to 'Users', users_path(@users) %>
		</nav>	
	</header>
	<%= yield %>

</body>
</html>
